{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$ref": "#/$defs/Project",
    "$defs": {
        "Project": {
            "properties": {
                "log_file": {
                    "type": "string",
                    "description": "Path to the log file"
                },
                "users": {
                    "items": {
                        "$ref": "#/$defs/User"
                    },
                    "type": "array",
                    "description": "Project users"
                },
                "auth_users": {
                    "items": {
                        "$ref": "#/$defs/AuthUser"
                    },
                    "type": "array",
                    "description": "Authenticated users"
                },
                "teams": {
                    "items": {
                        "$ref": "#/$defs/Team"
                    },
                    "type": "array",
                    "description": "Teams"
                },
                "master_dbs": {
                    "items": {
                        "$ref": "#/$defs/MasterDB"
                    },
                    "type": "array",
                    "description": "Standard (master) databases"
                },
                "foreigns": {
                    "items": {
                        "$ref": "#/$defs/Foreign"
                    },
                    "type": "array",
                    "description": "Foreign projects for copying or including their databases"
                },
                "extract_dbs": {
                    "items": {
                        "$ref": "#/$defs/ExtractDB"
                    },
                    "type": "array",
                    "description": "Extract databases"
                },
                "working_extract_dbs": {
                    "items": {
                        "$ref": "#/$defs/WorkingExtractDB"
                    },
                    "type": "array",
                    "description": "Working extract databases"
                },
                "dynamic_dbsets": {
                    "items": {
                        "$ref": "#/$defs/DynamicDBSet"
                    },
                    "type": "array",
                    "description": "DBSET with dynamic members"
                },
                "dbsets": {
                    "items": {
                        "$ref": "#/$defs/StaticDBSet"
                    },
                    "type": "array",
                    "description": "DBSET with static members"
                },
                "mdbs": {
                    "items": {
                        "$ref": "#/$defs/MDB"
                    },
                    "type": "array",
                    "description": "MDBs"
                },
                "ttfonts": {
                    "items": {
                        "$ref": "#/$defs/TTFont"
                    },
                    "type": "array",
                    "description": "TrueType fonts"
                },
                "post_commands": {
                    "items": {
                        "type": "string"
                    },
                    "type": "array",
                    "description": "PML commands to run at the end"
                }
            },
            "additionalProperties": false,
            "type": "object"
        },
        "User": {
            "properties": {
                "name": {
                    "type": "string",
                    "description": "User name"
                },
                "password": {
                    "type": "string",
                    "description": "Password"
                },
                "description": {
                    "type": "string",
                    "description": "Description"
                },
                "free": {
                    "type": "boolean",
                    "description": "Whether to grant FREE access to the user"
                }
            },
            "additionalProperties": false,
            "type": "object",
            "required": [
                "name",
                "password"
            ]
        },
        "AuthUser": {
            "properties": {
                "name": {
                    "type": "string",
                    "description": "Qualified name"
                },
                "default_user": {
                    "type": "string",
                    "description": "Default project user for the authenticated user login"
                },
                "users": {
                    "items": {
                        "type": "string"
                    },
                    "type": "array",
                    "description": "Valid project users for the authenticated user login"
                }
            },
            "additionalProperties": false,
            "type": "object",
            "required": [
                "name"
            ]
        },
        "Team": {
            "properties": {
                "name": {
                    "type": "string",
                    "description": "Team name"
                },
                "members": {
                    "items": {
                        "type": "string"
                    },
                    "type": "array",
                    "description": "User names of team members"
                },
                "description": {
                    "type": "string",
                    "description": "Description"
                }
            },
            "additionalProperties": false,
            "type": "object",
            "required": [
                "name"
            ]
        },
        "MasterDB": {
            "properties": {
                "name": {
                    "type": "string",
                    "description": "Database name"
                },
                "type": {
                    "type": "string",
                    "description": "Database type"
                },
                "ref_only": {
                    "type": "boolean",
                    "description": "Whether the database is reference-only"
                },
                "db_number": {
                    "type": "integer",
                    "description": "Database number"
                },
                "area_number": {
                    "type": "integer",
                    "description": "Area number to store the database"
                },
                "explicit_claim": {
                    "type": "boolean",
                    "description": "Whether to set the database to explicit claim mode"
                },
                "protected": {
                    "type": "boolean",
                    "description": "Whether to protect the database from copying"
                },
                "extract_number": {
                    "type": "integer",
                    "description": "Extract number"
                },
                "file_number": {
                    "type": "integer",
                    "description": "Database file number"
                },
                "description": {
                    "type": "string",
                    "description": "Description"
                },
                "create_element": {
                    "$ref": "#/$defs/Element",
                    "description": "Initial top-level element below the WORLD"
                }
            },
            "additionalProperties": false,
            "type": "object",
            "required": [
                "name",
                "type"
            ]
        },
        "Element": {
            "properties": {
                "type": {
                    "type": "string",
                    "description": "Element type"
                },
                "name": {
                    "type": "string",
                    "description": "Element name"
                }
            },
            "additionalProperties": false,
            "type": "object",
            "required": [
                "type",
                "name"
            ]
        },
        "Foreign": {
            "properties": {
                "project": {
                    "type": "string",
                    "description": "Project code"
                },
                "username": {
                    "type": "string",
                    "description": "User name to access the foreign project",
                    "default": "SYSTEM"
                },
                "password": {
                    "type": "string",
                    "description": "Password for the user",
                    "default": "XXXXXX"
                },
                "copy_dbs": {
                    "items": {
                        "$ref": "#/$defs/CopyDB"
                    },
                    "type": "array",
                    "description": "Databases to copy to this project"
                },
                "include_dbs": {
                    "items": {
                        "type": "string"
                    },
                    "type": "array",
                    "description": "Databases to include in this project as foreign"
                }
            },
            "additionalProperties": false,
            "type": "object",
            "required": [
                "project"
            ]
        },
        "CopyDB": {
            "properties": {
                "from": {
                    "type": "string",
                    "description": "Source database name"
                },
                "to": {
                    "type": "string",
                    "description": "New database name"
                },
                "area_number": {
                    "type": "integer",
                    "description": "Area number to store the database"
                },
                "file_number": {
                    "type": "integer",
                    "description": "Database file number"
                }
            },
            "additionalProperties": false,
            "type": "object",
            "required": [
                "from"
            ]
        },
        "ExtractDB": {
            "properties": {
                "owner": {
                    "type": "string",
                    "description": "Owner database extracted from"
                },
                "name": {
                    "type": "string",
                    "description": "Database name"
                },
                "variant": {
                    "type": "boolean",
                    "description": "Whether the extract is variant"
                },
                "session": {
                    "type": "integer",
                    "description": "Parent session number to link with the extract"
                },
                "area_number": {
                    "type": "integer",
                    "description": "Area number to store the database"
                },
                "explicit_claim": {
                    "type": "boolean",
                    "description": "Whether to set the database to explicit claim mode"
                },
                "extract_number": {
                    "type": "integer",
                    "description": "Extract number"
                },
                "description": {
                    "type": "string",
                    "description": "Description"
                }
            },
            "additionalProperties": false,
            "type": "object",
            "required": [
                "owner",
                "name"
            ]
        },
        "WorkingExtractDB": {
            "properties": {
                "owner": {
                    "type": "string",
                    "description": "Owner database extracted from"
                },
                "users": {
                    "items": {
                        "type": "string"
                    },
                    "type": "array",
                    "description": "User names to create the working extracts for"
                },
                "variant": {
                    "type": "boolean",
                    "description": "Whether the extracts are variant"
                },
                "area_number": {
                    "type": "integer",
                    "description": "Area number to store the databases"
                },
                "explicit_claim": {
                    "type": "boolean",
                    "description": "Whether to set the databases to explicit claim mode"
                },
                "description": {
                    "type": "string",
                    "description": "Description"
                }
            },
            "additionalProperties": false,
            "type": "object",
            "required": [
                "owner",
                "users"
            ]
        },
        "DynamicDBSet": {
            "properties": {
                "name": {
                    "type": "string",
                    "description": "DBSET name"
                },
                "description": {
                    "type": "string",
                    "description": "Description"
                },
                "criteria": {
                    "type": "string",
                    "description": "Selection expression for databases in the DBSET"
                },
                "order_by": {
                    "type": "string",
                    "description": "Sort selection by",
                    "enum": [
                        "DBNO",
                        "STYP",
                        "NAME"
                    ],
                    "enumDescriptions": [
                        "Database number",
                        "Database type",
                        "Database name"
                    ]
                }
            },
            "additionalProperties": false,
            "type": "object",
            "required": [
                "name",
                "criteria",
                "order_by"
            ]
        },
        "StaticDBSet": {
            "properties": {
                "name": {
                    "type": "string",
                    "description": "DBSET name"
                },
                "description": {
                    "type": "string",
                    "description": "Description"
                },
                "dbs": {
                    "items": {
                        "type": "string"
                    },
                    "type": "array",
                    "description": "Databases in the DBSET"
                }
            },
            "additionalProperties": false,
            "type": "object",
            "required": [
                "name"
            ]
        },
        "MDB": {
            "properties": {
                "name": {
                    "type": "string",
                    "description": "MDB name"
                },
                "description": {
                    "type": "string",
                    "description": "Description"
                },
                "current_dbs": {
                    "items": {
                        "type": "string"
                    },
                    "type": "array",
                    "description": "Current databases in the MDB"
                },
                "deferred_dbs": {
                    "items": {
                        "type": "string"
                    },
                    "type": "array",
                    "description": "Deferred databases in the MDB"
                }
            },
            "additionalProperties": false,
            "type": "object",
            "required": [
                "name"
            ]
        },
        "TTFont": {
            "properties": {
                "index": {
                    "type": "integer",
                    "description": "Font index number"
                },
                "face_name": {
                    "type": "string",
                    "description": "Font face name"
                },
                "description": {
                    "type": "string",
                    "description": "Font description"
                }
            },
            "additionalProperties": false,
            "type": "object",
            "required": [
                "index",
                "face_name"
            ]
        }
    }
}